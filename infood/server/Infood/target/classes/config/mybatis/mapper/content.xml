<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="content">
	
	<!-- 홈화면 리스트 -->
	<select id="food_list" resultType="foodVO">
		select * from content_food
	</select>
	
	<!-- 팁화면 리스트 -->
	<select id="tip_list" resultType="content_tipVO">
		select * from content_tip
	</select>
	
	<!-- 실시간 지하철역 검색 -->
	<select id="station" parameterType="String" resultType="stationVO">
		select * from train_station where station_name like CONCAT(#{station},'%')
	</select>
	
	<!-- 음식 정보 올리기 -->
	<insert id="content_food" parameterType="java.util.HashMap">
		insert into content_food values(
			0,
			#{user_idx},
			#{user_nikname},
			#{filename},
			#{subway},
			#{food},
			#{content},
			current_timestamp
		)
	</insert>
	
	<!-- tip 정보 올리기(tip을 몇단계로 거쳤는지에 따라서 sql문을 다르게 입력해줘야 한다) -->
	<!-- 1가지만 올릴경우 -->
	<insert id="content_tip1" parameterType="java.util.HashMap">
		insert into content_tip values(
			0,
			#{user_nikname},
			#{title},
			#{content1},
			'none',
			'none',
			'none',
			'none',
			#{content_image1},
			'none',
			'none',
			'none',
			'none',
			current_timestamp
		)
	</insert>
	<!-- 2가지만 올릴경우 -->
	<insert id="content_tip2" parameterType="java.util.HashMap">
		insert into content_tip values(
			0,
			#{user_nikname},
			#{title},
			#{content1},
			#{content2},
			'none',
			'none',
			'none',
			#{content_image1},
			#{content_image2},
			'none',
			'none',
			'none',
			current_timestamp
		)
	</insert>
	<!-- 3가지만 올릴경우 -->
	<insert id="content_tip3" parameterType="java.util.HashMap">
		insert into content_tip values(
			0,
			#{user_nikname},
			#{title},
			#{content1},
			#{content2},
			#{content3},
			'none',
			'none',
			#{content_image1},
			#{content_image2},
			#{content_image3},
			'none',
			'none',
			current_timestamp
		)
	</insert>
	<!-- 4가지만 올릴경우 -->
	<insert id="content_tip4" parameterType="java.util.HashMap">
		insert into content_tip values(
			0,
			#{user_nikname},
			#{title},
			#{content1},
			#{content2},
			#{content3},
			#{content4},
			'none',
			#{content_image1},
			#{content_image2},
			#{content_image3},
			#{content_image4},
			'none',
			current_timestamp
		)
	</insert>
	<!-- 5가지  올릴경우 -->
	<insert id="content_tip5" parameterType="java.util.HashMap">
		insert into content_tip values(
			0,
			#{user_nikname},
			#{title},
			#{content1},
			#{content2},
			#{content3},
			#{content4},
			#{content5},
			#{content_image1},
			#{content_image2},
			#{content_image3},
			#{content_image4},
			#{content_image5},
			current_timestamp
		)
	</insert>
	
</mapper>












